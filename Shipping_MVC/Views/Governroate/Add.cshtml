@model GovernroateAddVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_dashboardLayout";
    ViewData["Title"] = "Governroates";
    SelectList branchs =
      new SelectList(Model.branches_List, "Id", "Name");
}

<div class="section-padding data-form">
    <div class="container">
        <div class="head-title">
            <p>Governroate Data</p>
            <h3>Always Good To Make Our Business Bigger</h3>
        </div>
        <form method="post">
            <div class="row my-5 align-items-start justify-content-center gy-5">
                <div class="col-md-6">
                    <label asp-for="name">
                    </label>
                    <input class="w-100 rounded-3 p-2" asp-for="name" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="branch_Id">
                    </label>
                    <select class="w-100 rounded-3 p-2" asp-for="branch_Id" asp-items="branchs">
                        <option value="0">--Select Branch--</option>
                    </select>
                    <span asp-validation-for="branch_Id" class="text-danger"></span>
                </div>
            </div>
            <input type="submit" class="button" value="Add" />
        </form>
    </div>
</div>