@{
    Layout = "_dashboardLayout";
    ViewData["Title"] = "Branches";
}

<div class="section-padding data-form">
    <div class="container">
        <div class="head-title">
            <p>Branch Data</p>
            <h3>Always Good To Make Our Business Bigger</h3>
        </div>
        <form method="post">
            <div class="row my-5 align-items-start justify-content-center gy-5">
                <div class="col-md-6">
                    <label asp-for="name">
                    </label>
                    <input class="w-100 rounded-3 p-2" asp-for="name" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
            </div>
            <input type="submit" class="button" value="Update" />
        </form>
    </div>
</div>